{
  "buttonGroupClasses": {
    "type": "attribute",
    "key": "class",
    "value": {
      "label": "Open direction",
      "type": "select",
      "values": [
        {
          "label": "Down",
          "value": "dropdown"
        },
        {
          "label": "Up",
          "value": "dropup"
        }
      ]
    }
  },
  "buttonClasses": {
    "type": "attribute",
    "key": "class",
    "value": {
      "type": "group",
      "values": [
        {
          "type": "const",
          "value": "btn"
        },
        {
          "type": "const",
          "value": "btn-default"
        },
        {
          "label": "Button size",
          "type": "select",
          "optional": true,
          "values": [
            {
              "label": "Large",
              "value": "btn-lg"
            },
            {
              "label": "Small",
              "value": "btn-sm"
            },
            {
              "label": "Extra small",
              "value": "btn-xs"
            }
          ]
        },
        {
          "label": "Disabled",
          "type": "switch",
          "on": "disabled"
        },
        {
          "label": "Active",
          "type": "switch",
          "on": "active"
        },
        {
          "label": "Block level",
          "type": "switch",
          "on": "btn-block"
        }
      ]
    }
  }
}
