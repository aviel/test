{
  "interval": {
    "label": "Time between slides (ms)",
    "type": "number",
    "min": 1000,
    "max": 15000,
    "step": 1000
  },
  "pause": {
    "label": "Pause while hovering",
    "type": "switch",
    "on": "hover"
  },
  "wrap": {
    "label": "Cycle continuously",
    "type": "switch",
    "on": "true",
    "off": "false",
    "default": "on"
  },
  "keyboard": {
    "label": "Respond to keyboard events",
    "type": "switch",
    "on": "true",
    "off": "false",
    "default": "on"
  }
}
