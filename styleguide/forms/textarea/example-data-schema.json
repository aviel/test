{
  "formGroupClasses": {
    "type": "attribute",
    "key": "class",
    "value": {
      "type": "group",
      "values": [
        {
          "type": "const",
          "value": "form-group"
        },
        {
          "label": "Validation",
          "type": "select",
          "optional": true,
          "values": [
            {
              "label": "Success",
              "value": "has-success"
            },
            {
              "label": "Warning",
              "value": "has-warning"
            },
            {
              "label": "Error",
              "value": "has-error"
            }
          ]
        }
      ]
    }
  },
  "textareaAttrs": {
    "type": "group",
    "values": [
      {
        "type": "attribute",
        "key": "class",
        "value": {
          "type": "group",
          "values": [
            {
              "type": "const",
              "value": "form-control"
            },
            {
              "label": "Disabled",
              "type": "switch",
              "on": "disabled"
            },
            {
              "label": "Size",
              "type": "select",
              "optional": true,
              "values": [
                {
                  "label": "Large",
                  "value": "input-lg"
                },
                {
                  "label": "Small",
                  "value": "input-sm"
                }
              ]
            }
          ]
        }
      },
      {
        "label": "Read only",
        "type": "switch",
        "value": " readonly"
      }
    ]
  }
}
